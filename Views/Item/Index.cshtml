@using VendorOrder.Models;

<h1>Vendor Spender</h1>
@if (Model.Count == 0)
{
    <p>There are no items in the list.</p>
    <a href="/orders/new">Make an order.</a>
<a href="/">Back to home.</a>
}

<ul>
    @foreach(Order order in Model)
    {
        <li><a href='/orders/@order.Id'>@order.Description</a></li>
    }
</ul>